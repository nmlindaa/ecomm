{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": "./src",
    "paths": {
      "pages/*": [
        "pages/*"
      ],
      "components/*": [
        "components/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "jsx": "preserve",
    "target": "es6",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
